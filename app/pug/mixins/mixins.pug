mixin link(href, name)
  a(href= href)= name

mixin item-social(count, data, dataTitle)
  .item-social
    .item-comments(title='Kоличество комментариев') 
      i.fa.fa-comments 
      a.item-comments-count(href='#disqus_thread') #{count}
    .fa.fa-share-alt(title='Поделиться в соц.сетях')
    .likely.likely-custom(data-url='path', data-media= data, data-title= dataTitle )
      .vkontakte(title='Поделиться в контакте') Вконтакте 
      .facebook(title='Поделиться в facebook') Facebook
      .twitter(title='Поделиться в twitter') Twitter

